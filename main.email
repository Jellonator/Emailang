!bar;
!<global@bar> {
	"^set$" {
		@content = @attachments[0];
	}
	"^print$" {
		("print", @@content) > <io@std.com>;
	}
	"^get$" {
		(@content, @@attachments[0]) > @sender;
	}
};

!<user@bar> {
	"^start$" {
		(set, "thing", "Hello!") > <global@bar>;
		(print, "thing") > <global@bar>;
		(get, receive, "thing") > <global@bar>;
	}
	"^receive$" {
		(print, "received: " + @content) > <io@std.com>;
	}
};

"start" > <user@bar>;
