!bar;

!<user@bar> {
	"^start$" {
		(thing, false, false) > <user@bar>;
		(thing, false, true) > <user@bar>;
		(thing, true, false) > <user@bar>;
		(thing, true, true) > <user@bar>;
	}
	"^thing$" {
		if @content {
			(print, "A") > <io@std.com>;
		} elif @attachments[0] {
			(print, "B") > <io@std.com>;
		} else {
			(print, "C") > <io@std.com>;
		};
	}
};

"start" > <user@bar>;
